<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hueBarMax"
        android:layout_alignParentEnd="true"
        android:max="180"
        android:indeterminate="false"
        android:layout_alignParentStart="true"
        android:progress="87" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/satBarMax"
        android:layout_below="@+id/hueBarMax"
        android:layout_alignEnd="@+id/hueBarMax"
        android:max="255"
        android:layout_alignParentStart="true"
        android:progress="255" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valBarMax"
        android:layout_below="@+id/satBarMax"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/satBarMax"
        android:max="255"
        android:progress="255" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hueBarMin"
        android:layout_above="@+id/satBarMin"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/satBarMin"
        android:max="180"
        android:progress="41" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/satBarMin"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/valBarMin"
        android:layout_alignParentStart="true"
        android:max="255"
        android:progress="112" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valBarMin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/satBarMin"
        android:max="255"
        android:progress="115" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/gyroText"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>

</RelativeLayout>
